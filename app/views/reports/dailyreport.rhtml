}
var save=document.getElementById('save');
save.disabled=true;


//output.disabled=true;
var mydate=new Date(),
month=mydate.getMonth(),
month1=month+1,
day=mydate.getDate(),
year=mydate.getYear(),
hours=mydate.getHours();

if(hours<18)
{


