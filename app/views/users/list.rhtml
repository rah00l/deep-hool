<!--RUBY CODE FOR FETCHING USERS DATA--> 
<% @t = User.find_by_sql("select * from users" ) %>
<% @t.each do |c| %>
  <tr>
  
	<td nowrap align="center" width="111"><font face="Zurich BT"  size="2"><%=  link_to c.login, :action => 'edit', :id => c.id %>&nbsp;</td>	
	<td nowrap align="center" width="83"><font face="Zurich BT" size="2"><%= c.usertype %>&nbsp;</td>
	<td nowrap align="center" width="100">
<% @b=c.userstatus %><font face="Zurich BT"  size="2">
<% if @b.to_i== 1 %> </font><font face="Zurich BT" size="2">Active
<%else%>
In Active
<%end%>

</td>
	<td nowrap align="center" width="87"><font face="Zurich BT"  size="2"><%= c.loginstatus %>&nbsp;</td>
	
	<td nowrap align="center" width="87"><font face="Zurich BT"   size="2"><%= c.firstname %>&nbsp;</td>
	<td nowrap align="center" width="87"><font face="Zurich BT"  size="2"><%= c.lastname%>&nbsp;</td>
